@page
@model IndexModel
@{
    ViewData["Title"] = "BioData";
    ViewData["ActivePage"] = ManageNavPages.BioData;
}

<div class="card">
    <div class="row">
        <div class="col-md-12 card-body rounded">
            <div class="card-header">
                <h4> @ViewData["Title"]</h4>

            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                 
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="Member.Title" class="control-label"></label>
                            <select asp-for="Member.Title" class="form-control">
                                <option value="0">Mr</option>
                                <option value="1">Mrs</option>
                                <option value="2">Miss</option>
                                <option value="3">Master</option>
                            </select>
                            <span asp-validation-for="Member.Title" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>





                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">

                            <label asp-for="Member.UserName" class="control-label"></label>
                            <input asp-for="Member.UserName" class="form-control" />
                            <span asp-validation-for="Member.UserName" class="text-danger"></span>
                            <input type="hidden" asp-for="Member.Id" />

                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">


                        <div class="form-group">
                            <label asp-for="Member.Surname" class="control-label"></label>
                            <input asp-for="Member.Surname" class="form-control" />
                            <span asp-validation-for="Member.Surname" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>


                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="Member.Firstname" class="control-label"></label>
                            <input asp-for="Member.Firstname" class="form-control" />
                            <span asp-validation-for="Member.Firstname" class="text-danger"></span>
                        </div>

                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">


                        <div class="form-group">
                            <label asp-for="Member.Middlename" class="control-label"></label>
                            <input asp-for="Member.Middlename" class="form-control" />
                            <span asp-validation-for="Member.Middlename" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>


                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="Member.Country" class="control-label"></label>
                            
                            <select asp-for="Member.Title" class="form-control">
                                <option value="0">Mr</option>
                                <option value="1">Mrs</option>
                                <option value="2">Miss</option>
                                <option value="3">Master</option>
                            </select>

                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="Member.DateOfBirth" class="control-label"></label>
                            <input type="date" asp-for="Member.DateOfBirth" class="form-control" />
                            <span asp-validation-for="Member.DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>




                <div class="row">
                    <div class="col-md-6">


                        <div class="form-group">
                            <label asp-for="Member.State" class="control-label"></label>
                            <select asp-for="Member.State" class="form-control"></select>

                        </div>

                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="Member.Address" class="control-label"></label>
                            <input asp-for="Member.Address" class="form-control" />
                            <span asp-validation-for="Member.Address" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Member.PhoneNumber" class="control-label"></label>
                            <input asp-for="Member.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Member.PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">


                        <div class="form-group">
                            <label asp-for="Member.WhatsAppNumber" class="control-label"></label>
                            <input asp-for="Member.WhatsAppNumber" class="form-control" />
                            <span asp-validation-for="Member.WhatsAppNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>


                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="Member.Email" class="control-label"></label>
                            <input asp-for="Member.Email" class="form-control" />
                            <span asp-validation-for="Member.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Member.SponsorName" class="control-label"></label>
                            <input asp-for="Member.SponsorName" class="form-control" />
                            <span asp-validation-for="Member.SponsorName" class="text-danger"></span>
                        </div>

                    </div>
                    <!-- /.col -->
                </div>


                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="Member.NameOfUpLine" class="control-label"></label>
                            <input asp-for="Member.NameOfUpLine" class="form-control" />
                            <span asp-validation-for="Member.NameOfUpLine" class="text-danger"></span>
                        </div>

                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">


                        <div class="form-group">
                            <label asp-for="Member.RegistrationDate" class="control-label"></label>
                            <input type="date" asp-for="Member.RegistrationDate" class="form-control" />
                            <span asp-validation-for="Member.RegistrationDate" class="text-danger"></span>
                        </div>

                    </div>
                    <!-- /.col -->
                </div>

                <div class="form-group card-footer">
                    <input type="submit" st value="SAVE" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>



