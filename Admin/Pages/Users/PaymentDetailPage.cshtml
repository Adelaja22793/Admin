@page
@model Admin.Pages.Users.PaymentDetailPageModel
@{
    ViewData["Title"] = "Payment Detail";
    ViewData["ActivePage"] = ManageNavPages.PaymentDetail;
}
<div class="card">
    <div class="row">
        <div class="col-md-12 card-body rounded">
            <div class="card-header">
                <h4> @ViewData["Title"]</h4>

            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="PaymentDetail.PinCode" class="control-label"></label>
                            <input asp-for="PaymentDetail.PinCode" class="form-control" />
                            <span asp-validation-for="PaymentDetail.PinCode" class="text-danger"></span>
                            <input type="hidden" asp-for="PaymentDetail.Id" />
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="PaymentDetail.AmountPaid" class="control-label"></label>
                            <input asp-for="PaymentDetail.AmountPaid" class="form-control" />
                            <span asp-validation-for="PaymentDetail.AmountPaid" class="text-danger"></span>

                        </div>
                    </div>
                    <!-- /.col -->
                </div>


                <div class="row">
                    <div class="col-md-6">


                        <div class="form-group">
                            <label asp-for="PaymentDetail.PaymentDate" class="control-label"></label>
                            <input asp-for="PaymentDetail.PaymentDate" class="form-control" />
                            <span asp-validation-for="PaymentDetail.PaymentDate" class="text-danger"></span>

                        </div>

                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">

                        <div class="form-group">
                            <label asp-for="PaymentDetail.PaymentOption" class="control-label"></label>
                            <select asp-for="PaymentDetail.PaymentOption" class="form-control">
                                <option value="0">Cash</option>
                                <option value="1">Bank Transfer</option>
                                <option value="2">Credit Card</option>
                                <option value="3">PayPal</option>
                            </select>
                            <span asp-validation-for="PaymentDetail.PaymentOption" class="text-danger"></span>
                        </div>
                    </div>
                    <!-- /.col -->
                </div>


             
                <div class="form-group">
                    <input type="submit" value="SAVE" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>






